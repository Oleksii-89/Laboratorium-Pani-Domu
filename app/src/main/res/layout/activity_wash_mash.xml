<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WashMashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar_main"
            android:id="@+id/toolbar_wash_mash"/>

        <ImageView
            android:id="@+id/board_wash_mash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginBottom="15dp"
            android:src="@drawable/board_zmywarka"
            android:contentDescription="@string/top_fragment_image"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_product_recycler_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_gravity="center"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>