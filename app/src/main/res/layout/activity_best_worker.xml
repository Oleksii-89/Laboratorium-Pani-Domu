<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BestWorkerActivity">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar_best_worker"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/board_worker_gold"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/worker_karton"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/product_image_id"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/worker_image"
        android:src="@drawable/work_man_gold"
        android:gravity="center"
        android:layout_gravity="center"/>
<!--        android:onClick="goToDescription"/>-->

    <TextView
        android:id="@+id/product_title_id"
        android:textColor="#2d2d2d"
        android:textSize="17sp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_gravity="center"
        android:text="Mateusz Godlewski"
        android:textStyle="bold"
        android:layout_width="170dp"
        android:layout_height="30dp"/>
        </LinearLayout>

    </FrameLayout>



</LinearLayout>