<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AboutWorkerActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        layout="@layout/toolbar_main"
        android:id="@+id/toolbar_about_worker"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Za co doceniamy:"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="P - pomocność"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/worker_pomoc_one"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/work_helper"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:onClick="p1"/>

            <ImageView
                android:id="@+id/work_pomoc_two"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/work_waite"
                android:onClick="p2"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="T - team work"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/work_team_one"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/work_team_work_one"
                android:onClick="t1"/>

            <ImageView
                android:id="@+id/work_team_two"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/work_team_work_two"
                android:onClick="t2"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="J - jakość w procesie pakowania"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/work_jak_one"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/work_box_one"
                android:onClick="j1"/>

            <ImageView
                android:id="@+id/work_jak_two"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/work_box_two"
                android:onClick="j2"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D - dbanie o każdą przesyłkę"
            android:textStyle="bold"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/work_d_one"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/fly_box_one"
                android:onClick="d1"/>

            <ImageView
                android:id="@+id/work_d_two"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_margin="15dp"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/fly_box_two"
                android:onClick="d2"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>